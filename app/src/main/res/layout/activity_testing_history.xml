<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".TestingHistoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="List Test"
        android:textStyle="normal|bold"
        android:layout_marginBottom="10dp"
        android:textSize="25dp"
        android:textColor="@color/colorPrimaryWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/covid_test_id"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryWhite"
            android:text="Test Id"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/test_result"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryWhite"
            android:text="Result"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/test_kit"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryWhite"
            android:text="Testing KIt"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/test_date"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimaryWhite"
            android:text="Test Date"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/result_date"
            android:layout_weight="2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Result Date"
            android:textColor="@color/colorPrimaryWhite"
            android:textSize="10dp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/test_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>